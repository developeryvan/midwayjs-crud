{
  "env": { "jest": true },
  "extends": ["./node_modules/mwts/"],
  "plugins": ["import", "unicorn", "decorator-position"],
  "rules": {
    "@typescript-eslint/no-explicit-any": 0,
    "eqeqeq": [2, "always"],
    "no-multiple-empty-lines": [2, { "max": 0 }],
    "object-shorthand": 2,
    "quote-props": [2, "consistent"],
    "space-before-function-paren": [2, { "anonymous": "always", "named": "never", "asyncArrow": "always" }],
    "import/order": [2, { "newlines-between": "never" }],
    "unicorn/filename-case": [2, { "case": "snakeCase" }],
    "decorator-position/decorator-position": ["error", { "printWidth": 180, "properties": "prefer-inline", "methods": "above" }]
  },
  "ignorePatterns": ["node_modules", "dist", "test", "jest.config.js", "typings"]
}
